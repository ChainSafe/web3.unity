Label {
    white-space: normal;
}

#deep-link-view__wallet-icon-container {
    margin-top: 30;
    margin-bottom: 10;
    justify-content: center;
    align-items: center;
}

#deep-link-view__spinner-container {
    width: 90;
    height: 90;
    flex-direction: row;
    justify-content: center;
}

#deep-link-view__wallet-icon {
    width: 80;
    height: 80;
    border-radius: var(--ro-border-radius-m);
    overflow: hidden;
}

#deep-link-view__wallet-icon-border {
    width: 100%;
    height: 100%;
    border-radius: var(--ro-border-radius-m);
    border-color: var(--ro-gray-glass-010);
    border-width: 2px;
}

#deep-link-view__continue-in-label {
    margin-bottom: 8;
    -unity-text-align: middle-center;
    color: var(--ro-color-fg-100);
}

#deep-link-view__message {
    margin-bottom: 16;
    -unity-text-align: middle-center;
    color: var(--ro-color-fg-200);
}

#deep-link-view__copy-link-container,
#deep-link-view__try-again-link-container {
    flex-direction: row;
    justify-content: center;
    margin-bottom: 20;
}